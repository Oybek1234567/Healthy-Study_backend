const Modules = require('../models/modules')

exports.createModule = async(req, res) => {
    const course = await Modules.query().where('name', req.body.name).first()
    if (course) {
        return res.status(400).json({ success: false, msg: 'Bunday module mavjud' })
    }

    await Modules.query().insert({
       name: req.body.name,
       max_students: req.body.max_students,
       length: req.body.length,
       course_id: req.body.course_id
    })

    return res.status(201).json({ success: true, msg: 'Module yaratildi' })
}

exports.getaAllModules = async(req,res) => {
    const course = await Courses.query().select('*').where('course_id', req.params.course_id)
    return res.json({success:true, courses: course})
}

